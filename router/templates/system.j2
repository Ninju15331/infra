config system
    option hostname '{{ router.hostname }}'
    option timezone '{{ shared.timezone }}'
    option ttylogin '0'
    option log_size '64'
    option urandom_seed '0'
    option compat_version '1.0'
    option zonename '{{ shared.zonename }}'
    option log_proto 'udp'
    option conloglevel '8'
    option cronloglevel '5'

config timeserver 'ntp'
    list server '0.openwrt.pool.ntp.org'
    list server '1.openwrt.pool.ntp.org'
    list server '2.openwrt.pool.ntp.org'
    list server '3.openwrt.pool.ntp.org'

{% for led in router.leds | default([]) %}
config led{{ " '" ~ led.name | lower | replace(' ', '_') ~ "'" if led.name is defined else "" }}
{% if led.name is defined %}
    option name '{{ led.name }}'
{% endif %}
    option sysfs '{{ led.sysfs }}'
    option trigger '{{ led.trigger }}'
{% if led.dev is defined %}
    option dev '{{ led.dev }}'
{% endif %}
{% for mode in led.modes | default([]) %}
    list mode '{{ mode }}'
{% endfor %}

{% endfor %}
